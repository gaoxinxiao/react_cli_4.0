{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "app": ["app/*"],
      "components": ["components/*"],
      "assets": ["assets/*"],
      "router": ["router/*"],
      "store": ["store/*"],
      "service": ["service/*"]
    },
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "jsx": "react",
    "resolveJsonModule":true,
    "sourceMap": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowUnreachableCode": true
  },
  "include": [
    "src", "global.d.ts"
  ],
  "exclude": [
    "src/**/**.js"
  ]
}